// test class ComvolutionC

void print(const vector<double>& v, bool index = true, bool sc = false)
{
  int width = 9;
  int dim = v.size();
  int n = dim;
  if (n > 20)
    n = 20;
  if (index)
    {
      for (int i = 0; i < n; ++i)
        cout << setw(width) << i << " ";
      cout << endl;
    }
  double sum2 = 0;
  for (int i = 0; i < n; ++i)
    {
      int idx = i;
      while (idx < 0) idx += dim;
      sum2 += v[idx] * v[idx];
      if (sc)
        cout << setw(width) << setprecision(2) << scientific << v[idx] << " ";
      else
        cout << setw(width) << setprecision(4) << fixed << v[idx] << " ";
    }
  cout << "(" << sqrt(sum2) << ")";
  cout << endl;
}

